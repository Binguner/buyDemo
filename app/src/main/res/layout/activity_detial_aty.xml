<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zdq.buydemo.detial_aty">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/detial_banner_0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_45"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/detial_shadow_0"
                app:layout_constraintTop_toBottomOf="@id/detial_banner_0"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/colorShadow"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/detail_price"
                android:text="¥ 69.00"
                app:layout_constraintTop_toBottomOf="@id/detial_shadow_0"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorRed"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/detail_shadow_1"
                android:layout_width="1dp"
                android:background="@color/colorShadow"
                app:layout_constraintEnd_toStartOf="@id/detail_dict"
                app:layout_constraintTop_toTopOf="@id/detail_dict"
                android:layout_marginEnd="10dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/detail_dict"
                app:layout_constraintTop_toBottomOf="@id/detial_shadow_0"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="收藏"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_sell_name"
                app:layout_constraintTop_toBottomOf="@id/detail_dict"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Sweet City/都市甜心油性指甲油美甲套装 魅影OL裸色系列7+1礼盒 TC03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/detail_shadow_2"
                android:background="@color/colorShadow"
                app:layout_constraintTop_toBottomOf="@id/detail_sell_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/detail_card_text"
                android:text="店铺满额减"
                android:background="@color/colorPurple"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@id/detail_shadow_2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/detail_card_text_2"
                app:layout_constraintTop_toTopOf="@id/detail_card_text"
                app:layout_constraintStart_toEndOf="@id/detail_card_text"
                android:text="满 ¥ 99.00 减 ¥ 22.00, 满 ¥ 199.00 减 ¥ 60.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/detail_shadow_3"
                android:background="@color/colorShadow"
                app:layout_constraintTop_toBottomOf="@id/detail_card_text_2"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <TextView
                android:id="@+id/detail_text"
                android:text="商品简介"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toBottomOf="@id/detail_shadow_3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_product_name"
                android:text="产品："
                app:layout_constraintTop_toBottomOf="@id/detail_text"
                android:layout_marginTop="6dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_product_text"
                app:layout_constraintTop_toTopOf="@id/detail_product_name"
                app:layout_constraintStart_toEndOf="@id/detail_product_name"
                android:text="姗蔻无毒指甲油包邮环保裸色指甲油儿童孕妇持久无毒..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_jhl"
                app:layout_constraintTop_toBottomOf="@id/detail_product_name"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp"
                android:layout_marginStart="10dp"
                android:text="净含量："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_jhl_text"
                android:text="7.5"
                app:layout_constraintStart_toEndOf="@id/detail_jhl"
                app:layout_constraintTop_toTopOf="@id/detail_jhl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_sell_time"
                app:layout_constraintTop_toBottomOf="@id/detail_jhl"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp"
                android:layout_marginStart="10dp"
                android:text="上市时间："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_selltime_text"
                android:text="2013-06-18"
                app:layout_constraintStart_toEndOf="@id/detail_sell_time"
                app:layout_constraintTop_toTopOf="@id/detail_sell_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/detail_color_cate"
                app:layout_constraintTop_toBottomOf="@id/detail_sell_time"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp"
                android:layout_marginStart="10dp"
                android:text="颜色分类："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_color_cate_text"
                android:text="颜色分类：湖水蓝 裸色粉 透明亮片 玫红色 珠光红"
                app:layout_constraintStart_toEndOf="@id/detail_color_cate"
                app:layout_constraintTop_toTopOf="@id/detail_color_cate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_pifu"
                app:layout_constraintTop_toBottomOf="@id/detail_color_cate"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp"
                android:layout_marginStart="10dp"
                android:text="肤  质："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_pifu_text"
                android:text="任何肤质"
                app:layout_constraintStart_toEndOf="@id/detail_pifu"
                app:layout_constraintTop_toTopOf="@id/detail_pifu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_fromwhere"
                app:layout_constraintTop_toBottomOf="@id/detail_pifu"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp"
                android:layout_marginStart="10dp"
                android:text="产  地："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_fromwhere_text"
                android:text="中国"
                app:layout_constraintStart_toEndOf="@id/detail_fromwhere"
                app:layout_constraintTop_toTopOf="@id/detail_fromwhere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="30dp"/>






        </android.support.constraint.ConstraintLayout>



    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/add_2_scj"
                android:text="加入购物车"
                android:background="@color/colorRed"
                android:textColor="@color/colorWhite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/buybuybuy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

             <Button
                 android:id="@+id/buybuybuy"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toEndOf="@id/add_2_scj"
                 android:text="立即购买"
                 android:background="@color/colorShadow"
                 android:textColor="@color/colorWhite"
                 android:layout_width="100dp"
                 android:layout_height="wrap_content"
                 />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.Toolbar>



</android.support.constraint.ConstraintLayout>